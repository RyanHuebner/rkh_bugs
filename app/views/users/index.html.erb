<p id="notice"><%= notice %></p>

<h1 class="header">Listing Users</h1>

<table class="table">
  <thead class="theader">
    <tr>
      <th class="cell">User</th>
      <th class="cell">Email</th>
      <th class="cell">Thumbnail</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td class="cell"><%= user.first_name + ' ' + user.last_name %></td>
        <td class="cell"><%= user.email %></td>
        <td class="cell"><%= user.thumbnail %></td>
        <td>
          <ul class="table_crud">
            <li><%= link_to 'Show', user %></li>
            <li><%= link_to 'Edit', edit_user_path(user) %></li>
            <li><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></li>
          </ul>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<span class="btn">
  <%= link_to 'New User', new_user_path %>
</span>