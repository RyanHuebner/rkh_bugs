<p id="notice"><%= notice %></p>

<h1 class="header">Reported Bugs</h1>

<table class="table">
  <thead class="theader">
    <tr>
      <th class="cell">User</th>
      <th class="cell">Title</th>
      <th class="cell">Description</th>
      <th class="cell">Issue type</th>
      <th class="cell">Priority</th>
      <th class="cell">Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bugs.each do |bug| %>
      <tr>
        <td class="cell"><%= (bug.user.first_name + ' ' + bug.user.last_name) %></td>
        <td class="cell"><%= bug.title %></td>
        <td class="cell"><%= bug.description %></td>
        <td class="cell"><%= bug.issue_type %></td>
        <td class="cell"><%= bug.priority %></td>
        <td class="cell"><%= bug.status %></td>
        <td>
          <ul class="table_crud">
            <li><%= link_to 'Show', bug %></li>
            <li><%= link_to 'Edit', edit_bug_path(bug) %></li>
            <li><%= link_to 'Destroy', bug, method: :delete, data: { confirm: 'Are you sure?' } %></li>
          </ul>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<span class="btn">
<%= link_to 'New Bug', new_bug_path %>
</span>